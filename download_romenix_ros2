#!/bin/bash

# Download Yocto layers for Romenix ROS2 - kirkstone branch

echo "Downloading Yocto layers (kirkstone branch)..."
echo "================================"
git clone git@github.com:ROM-robotics/meta-rom-intel-tui.git
cd meta-rom-intel-tui
git checkout kirkstone-romenix-humble 

cd ../../
pwd
git clone -b kirkstone git://git.yoctoproject.org/poky
cd layers
pwd
git clone -b kirkstone git://git.yoctoproject.org/meta-intel
git clone -b kirkstone https://github.com/openembedded/meta-openembedded.git
git clone -b kirkstone https://github.com/ros/meta-ros.git
git clone -b kirkstone https://github.com/meta-qt5/meta-qt5.git 
git clone -b kirkstone https://github.com/kraj/meta-clang

echo "Download complete!"
